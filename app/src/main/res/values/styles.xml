<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Theme.MyFancyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorText2</item>
    </style>

    <!-- Toast Theme -->
    <style name="toastTheme">
        <item name="stTextBold">false</item>
        <item name="stTextColor">@color/colorText2</item>
        <item name="stFont">@font/vazir</item>
        <item name="stTextSize">12sp</item>
        <item name="stColorBackground">@color/colorPrimaryDark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">@color/colorText</item>
        <item name="stIconEnd">@drawable/ic_info_outline_black_24dp</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">4dp</item>
    </style>

    <!-- Navigation drawer Theme -->
    <style name="NavigationView" >
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimary">@color/colorText</item>
        <item name="colorControlHighlight" tools:ignore="PrivateResource">@color/cardview_shadow_start_color</item>
    </style>

</resources>
