<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Activity.InfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/infoToolbar"
        android:layoutDirection="rtl"
        android:theme="@style/Theme.MyFancyTheme"
        android:background="@color/colorSplashOne">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shareText"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_share_white_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/toolbarNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText2"
                android:text="@string/app_name_farC"
                android:textSize="18sp"
                android:fontFamily="@font/vazir_medium"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/infoToolbar"/>

</RelativeLayout>
